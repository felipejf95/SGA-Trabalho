<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtBemVindo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4462FE"
    tools:context=".TelaPrincipalAlunoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="Bem-vindo Aluno"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnAdmAddCurso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAdmAddCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Gerar Grade Completa"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdmAddDisciplina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPerfil"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnAdmAddDisciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Gerar grade proximo periodo"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAlunoAddExtra"
        app:layout_constraintEnd_toEndOf="@+id/btnAdmAddCurso"
        app:layout_constraintStart_toStartOf="@+id/btnAdmAddCurso"
        app:layout_constraintTop_toBottomOf="@+id/btnAdmAddCurso"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnAlunoAddExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Cadastrar Atividades"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAtividades"
        app:layout_constraintEnd_toEndOf="@+id/btnAdmAddDisciplina"
        app:layout_constraintStart_toStartOf="@+id/btnAdmAddDisciplina"
        app:layout_constraintTop_toBottomOf="@+id/btnAdmAddDisciplina"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnAtividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="405dp"
        android:width="300dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Consultar Atividades"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnAlunoAddExtra"
        app:layout_constraintStart_toStartOf="@+id/btnAlunoAddExtra"
        app:layout_constraintTop_toBottomOf="@+id/btnAlunoAddExtra"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <ImageButton
        android:id="@+id/btnPerfil"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="146dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btnAdmAddCurso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnPerfilAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAtividades"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>